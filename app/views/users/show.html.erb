<div class="section" >
  <h2>Bio</h2>
  <p><%= @user.bio %></p>
</div>

<% @user.most_recent_posts.each_with_index do |post, index| %>
  <div class="section" >
    <%= link_to user_post_path(user_id: @user.id, id: post.id) do %>
      <h3>#<%= index + 1 %>: <%= post.title %></h3>
    <% end %>
    <p><%= post.text %></p>
  </div>
<% end %>

